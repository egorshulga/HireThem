<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <constant name="struts.convention.result.path" value="/"/>
    <constant name="struts.devMode" value="true"/>
    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>

    <package namespace="/" name="hireThem" extends="struts-default">
        <action name="loginInquire" class="com.github.hirethem.action.LoginInquireAction">
            <result>profile.jsp</result>
            <result name="error">login.jsp</result>
        </action>
        <action name="signInInquire" class="com.github.hirethem.action.SignInInquireAction">
            <result name="success">signin.jsp</result>
        </action>

        <action name="login" class="com.github.hirethem.action.LoginAction">
            <result>profile.jsp</result>
            <result name="input">login.jsp</result>
        </action>
        <action name="signin" class="com.github.hirethem.action.SignInAction">
            <result>profile.jsp</result>
            <result name="input">signin.jsp</result>
        </action>

        <action name="logout" class="com.github.hirethem.action.LogoutAction">
            <result>index.jsp</result>
        </action>

    </package>
</struts>