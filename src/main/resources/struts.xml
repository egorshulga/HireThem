<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>
    <constant name="struts.devMode" value="true"/>

    <constant name="struts.convention.default.parent.package" value="angularstruts"/>
    <package name="angularstruts" extends="json-default"/>
    <package name="data" extends="angularstruts" namespace="/data"/>
    <constant name="struts.action.extension" value=","/>
    <constant name="struts.convention.result.path" value="/"/>


    <package namespace="/" name="hireThem" extends="struts-default">
        <interceptors>
            <interceptor name="login" class="com.github.hirethem.action.interceptor.AuthorizationInterceptor"/>
            <interceptor-stack name="defaultWithAuthorizationCheckStack">
                <interceptor-ref name="defaultStack"/>
                <interceptor-ref name="login"/>
            </interceptor-stack>
        </interceptors>
        <default-interceptor-ref name="defaultWithAuthorizationCheckStack"/>
        <global-results>
            <result name="loginRedirect" type="redirectAction">login</result>
        </global-results>

        <action name="home" class="com.github.hirethem.action.HomeAction">
            <result>/index.jsp</result>
        </action>

        <action name="login" class="com.github.hirethem.action.LoginAction" method="input">
            <result name="input">/content/login.jsp</result>
            <result name="none" type="redirectAction">profile</result>
        </action>
        <action name="submitLogin" class="com.github.hirethem.action.LoginAction">
            <result type="redirectAction">profile</result>
            <result name="input">/content/login.jsp</result>
        </action>

        <action name="signin" class="com.github.hirethem.action.SignInAction" method="input">
            <result name="input">/content/signin.jsp</result>
        </action>
        <action name="submitSignIn" class="com.github.hirethem.action.SignInAction">
            <result type="redirectAction">profile</result>
            <result name="input">/content/signin.jsp</result>
        </action>

        <action name="logout" class="com.github.hirethem.action.LogoutAction">
            <result type="redirectAction">home</result>
        </action>

        <action name="profile" class="com.github.hirethem.action.ProfileAction">
            <result>/content/profile.jsp</result>
        </action>

        <action name="about" class="com.github.hirethem.action.PagesAction" method="about">
            <result name="about">/content/about.jsp</result>
        </action>

        <action name="contact" class="com.github.hirethem.action.PagesAction" method="contact">
            <result name="contact">/content/contact.jsp</result>
        </action>
        <action name="faq" class="com.github.hirethem.action.PagesAction" method="faq">
            <result name="faq">/content/faq.jsp</result>
        </action>

    </package>

</struts>
