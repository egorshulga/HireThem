<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>
    <constant name="struts.devMode" value="true"/>
    <constant name="struts.mapper.class" value="org.apache.struts2.dispatcher.mapper.Restful2ActionMapper" />
    <constant name="struts.enable.SlashesInActionNames" value="true" />
    <constant name="struts.mapper.alwaysSelectFullNamespace" value="false" />



    <package name="main" extends="json-default" namespace="/">
        <interceptors>
            <interceptor name="authorize" class="com.github.hirethem.action.interceptor.AuthorizationInterceptor" />

            <interceptor-stack name="myDefaultStack">
                <interceptor-ref name="defaultStack">
                    <param name="exception.logEnabled">true</param>
                    <param name="exception.logLevel">ERROR</param>
                </interceptor-ref>
                <interceptor-ref name="authorize" />
            </interceptor-stack>

        </interceptors>

        <default-interceptor-ref name="myDefaultStack" />
        <default-action-ref name="index"/>

        <action name="index" class="com.github.hirethem.action.home.IndexAction">
            <result name="success">/content/index.jsp</result>
        </action>
    </package>


    <package name="api" extends="main" namespace="/api">
        <interceptors>
            <interceptor-stack name="myJsonDefaultStack">
                <interceptor-ref name="myDefaultStack" />
                <interceptor-ref name="json" />
            </interceptor-stack>
        </interceptors>
        <default-interceptor-ref name="myJsonDefaultStack" />


        <action name="submitLogin" class="com.github.hirethem.action.authentication.LoginAction">
            <result type="json"/>
        </action>
        <action name="submitSignin" class="com.github.hirethem.action.authentication.SigninAction">
            <result type="json"/>
        </action>


        <action name="profile" class="com.github.hirethem.action.profile.ProfileAction" >
            <result type="json"/>
        </action>


        <action name="editProfile" class="com.github.hirethem.action.profile.EditProfileAction" method="input">
            <result type="json"/>
        </action>
        <action name="submitEditProfile" class="com.github.hirethem.action.profile.EditProfileAction">
            <result type="json"/>
        </action>


        

    </package>

</struts>
