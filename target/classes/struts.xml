<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>
    <constant name="struts.devMode" value="true"/>

    <constant name="struts.convention.default.parent.package" value="angularstruts"/>
    <package name="angularstruts" extends="json-default"/>
    <package name="data" extends="angularstruts" namespace="/data"/>
    <constant name="struts.action.extension" value=","/>

    <package namespace="/" name="hireThem" extends="struts-default">
        <action name="home" class="com.github.hirethem.action.HomeAction">
            <result>/WEB-INF/content/home.html</result>
        </action>

        <action name="loginInquire" class="com.github.hirethem.action.LoginInquireAction">
            <result>/partials/profile.html</result>
            <result name="login">/partials/login.html</result>
        </action>
        <action name="signInInquire" class="com.github.hirethem.action.SignInInquireAction">
            <result>/partials/signin.html</result>
        </action>

        <action name="login" class="com.github.hirethem.action.LoginAction">
            <result>/partials/profile.html</result>
            <result name="input">/partials/login.html</result>
        </action>
        <action name="signin" class="com.github.hirethem.action.SignInAction">
            <result>/partials/profile.html</result>
            <result name="input">/partials/signin.html</result>
        </action>

        <action name="logout" class="com.github.hirethem.action.LogoutAction">
            <result>index.jsp</result>
        </action>

    </package>

</struts>
